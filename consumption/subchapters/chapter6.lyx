\begin_layout Standard
\begin_inset Formula 
\begin{align}
U_{i} & =\begin{cases}
c_{i}-\frac{e_{i}^{2}}{2}+\theta_{i}(\pi\ max\{c_{i}-R(i),0\}-\epsilon\ max\{R(i)-c_{i},0\}) & c_{i}<s\\
s-\frac{e_{i}^{2}}{2}+\theta_{i}(\pi\ max\{c_{i}-R(i),0\}-\epsilon\ max\{R(i)-c_{i},0\}) & c_{i}\ge s
\end{cases}\label{eq:utility_1}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
For 
\begin_inset Formula $c_{i}>R(i)$
\end_inset

, above becomes 
